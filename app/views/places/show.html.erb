<h1><%= @place["name"] %></h1>

<h3>Posts</h3>

<ul>
  <% for post in @posts %>
    <li>
        <%= post["title"] %>
    </li>
    <li>
        <%= post["posted_on"] %>
    </li>
    <li>
        <%= post["description"] %>
    </li>
  <% end %>
</ul>

<p>
  <%= button_to "Delete this place", @place, :method => "delete" %>
</p>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to all places</a></p>